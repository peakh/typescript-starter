{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "An opinionated TypeScript starter for future projects.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "npm run build && node dist/index.js",
    "format": "prettier --write src/**",
    "lint": "eslint src/**",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peakh/typescript-starter.git"
  },
  "keywords": [
    "typescript",
    "template",
    "node"
  ],
  "author": "peakh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/peakh/typescript-starter/issues"
  },
  "homepage": "https://github.com/peakh/typescript-starter#readme",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  }
}
